{
  "name": "vscode-sql-formatter",
  "displayName": "SQL Formatter",
  "description": "Format sql files using the sql-formatter npm package",
  "version": "1.5.0",
  "publisher": "adpyke",
  "repository": {
    "type": "git",
    "url": "https://github.com/kufii/vscode-sql-formatter.git"
  },
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Formatters"
  ],
  "keywords": [
    "formatter",
    "prettier",
    "sql",
    "db2",
    "mariadb",
    "mysql",
    "n1ql",
    "plsql",
    "postgresql",
    "redshift",
    "spark",
    "tsql"
  ],
  "activationEvents": [
    "onLanguage:sql"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "SQL Formatter",
      "properties": {
        "sql-formatter.dialect": {
          "scope": "resource",
          "type": "string",
          "enum": [
            "sql",
            "db2",
            "mariadb",
            "mysql",
            "n1ql",
            "plsql",
            "postgresql",
            "redshift",
            "spark",
            "tsql"
          ],
          "default": "sql",
          "description": "Which dialect to format with?"
        },
        "sql-formatter.uppercase": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Convert keywords to uppercase or not"
        },
        "sql-formatter.linesBetweenQueries": {
          "scope": "resource",
          "type": "number",
          "minimum": 1,
          "default": 2,
          "description": "Number of linebreaks between queries"
        }
      }
    }
  },
  "main": "./src/extension.js",
  "scripts": {
    "lint": "eslint .",
    "prettier": "prettier --write ."
  },
  "devDependencies": {
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.6.0"
  },
  "dependencies": {
    "sql-formatter": "^4.0.2"
  }
}
